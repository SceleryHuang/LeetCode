class Solution:
    def isPowerOfTwo(self, n):
        """
        :type n: int
        :rtype: bool
        """
        # if n<=0:
        #     return False
        # if n ==1:
        #     return True
        # c = 1
        # while n>1:
        #     a =n%2
        #     n = n/2
        #     if a!= 0:
        #         return False
        #         break
        # return True
        
        if n<1:
            return False
        m = n&(n-1)
        return m==0
