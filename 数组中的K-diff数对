class Solution:
    def findPairs(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: int
        """
        count = 0
        # for i in set(nums):          
        #     if i+k in nums:
        #         count +=1
        # return count
        
        for i in range(len(nums)-1):
            for j in range(i,len(nums)-1):
                if abs(nums[i]-nums[j]) == k:
                    count +=1
                    
        return count
