from collections import Counter
class Solution:
    def findPairs(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: int
        """
        if nums==[]:
            return 0
        c = collections.Counter(nums)
        print(c)
        count = 0
        # for i in set(nums):          
        #     if i+k in nums:
        #         count +=1
        # return count
        if k < 0:
            return 0
        if k ==0:
            for i in c.keys():
                if c[i]>1:
                    count += 1
                return count
        else:
            for i in c.keys():
                if i+k in c:
                    count+=1
            return count
                    
            
            
